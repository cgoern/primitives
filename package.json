{
	"name": "@cgoern/ui",
	"version": "0.0.0",
	"description": "Zero-dependencies custom elements.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cgoern/cdash.git"
	},
	"author": "cgoern",
	"license": "MIT",
	"files": [
		"dist/rich-text.js",
		"dist/text.js"
	],
	"devDependencies": {
		"esbuild": "^0.23.0",
		"esbuild-minify-templates": "^0.11.0",
		"prettier": "^3.3.3"
	},
	"scripts": {
		"build": "node tools/build.mjs",
		"start": "node tools/start.mjs",
		"format": "prettier --write ."
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 100,
		"tabWidth": 4,
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
